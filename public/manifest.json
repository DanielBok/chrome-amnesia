{
  "name": "Chrome Amnesia",
  "manifest_version": 2,
  "version": "1.0",
  "description": "An extension to forget",
  "permissions": ["history", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/amnesia16.png",
      "32": "icons/amnesia32.png",
      "48": "icons/amnesia48.png",
      "128": "icons/amnesia128.png"
    },
    "default_title": "Chrome Amnesia",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/amnesia16.png",
    "32": "icons/amnesia32.png",
    "48": "icons/amnesia48.png",
    "128": "icons/amnesia128.png"
  }
}
